#!/usr/bin/env bash
#
# master@95.165.133.121:4961/home/master/git
# git@95.165.133.121:4961/home/git/repo
#
CURRENT=$(pwd)
cd $HOME/git

LIST="$HOME/Documents"
for repo in $(ls -lah | awk '/^drwx/ { print $9 }' | awk '!/\.$/ { print }')
do 
  LIST="$LIST $repo"
done

for file in $LIST
do 
  echo
  echo
  echo $file
  echo
  echo -e "sed -i 's/master@95.165.133.121:4961\/home\/master\/git/git@95.165.133.121:4961\/home\/git\/repo/g' $file/.git/config"
  sed 's/master@95.165.133.121:4961\/home\/master\/git/git@95.165.133.121:4961\/home\/git\/repo/g' $file/.git/config  
#  sed -i 's/master@95.165.133.121:4961\/home\/master\/git/git@95.165.133.121:4961\/home\/git\/repo/g' $file/.git/config
done

# sed 's/master@95.165.133.121:4961\/home\/master\/git/git@95.165.133.121:4961\/home\/git\/repo/g' $HOME/Documents/.git/config

cd $CURRENT
